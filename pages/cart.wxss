/* pages/cart.wxss */
page{
    background-color: #ebebeb;
}
.empty{
    margin-top: 50px;
}
.empty > .img{
    width: 80px;
    margin: 0 auto;
}
.empty > .text{
    width: 100%;
    margin: 0 auto;
    text-align: center;
    padding-top: 10px;
}
.empty > view > .btn{
    background-color: #ff6801;
    color: #ffffff;
    margin-top: 10px;
    width: 80%;
}
.list{
    margin-top: 2vh;
}
.item{
    width: 690rpx;
    height: 40px;
    background-color: #ffffff;
    border-bottom: 1px solid #ebebeb;
    padding: 5px 30rpx;
}
.item > .icon{
    width: 10%;
    height: 40px;
    padding-top: 10px;
}
.item > .img{
    padding-top: 5px;
    margin-left: 10px;
}
.item > .name{
    margin-left: 5px;
    line-height: 40px;
    height: 40px;
    width: 350rpx;
    text-align: left;
    overflow: hidden;
}
.item > .price{
    color: #989898;
    line-height: 40px;
}
.item > .price > span{
    color: #ff6600;
}
.buy{
    width: 100%;
    height: 8vh;
    background-color: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
    padding: 0 30rpx;
}
.buy > .icon{
    width: 10%;
    line-height: 8vh;
    padding-top: 3px;
}
.buy > .text{
    line-height: 8vh;
    margin-left: -5px;
}
.buy > .sum{
    line-height: 8vh;
    width: 250rpx;
    text-align: center;
}
.buy > .total{
    background-color: #cccccc;
    color: #ffffff;
    line-height: 8vh;
    width: 250rpx;
    text-align: center;
}
.buy > .active{
    background-color: #ff6600;
}
.buy > .sum > .active{
    color: #ff6600;
}