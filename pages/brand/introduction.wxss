/* pages/brand/introduction.wxss */
@import '../../pages/templates/dataEmptyTemplate.wxss';
@import '../../pages/home.wxss';

.list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
}

.brandDetailTitle {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
}

.brandDetailTitle view {
  position: relative;
  width: 100%;
  height: 100%;
}

.brandDetailTitle .bgImage {
  width: 100%;
}

.brandDetailTitle .logoImage {
  position: absolute;
  left: 45rpx;
  top: 350rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border: 1px solid gainsboro;
}

.brandDetailTitle text {
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.description {
  font-size: 30rpx;
  margin: 0rpx 30rpx 0rpx 30rpx;
}

.bookItem {
  margin: 0rpx 30rpx 0rpx 30rpx;
}
